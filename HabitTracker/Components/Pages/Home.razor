@page "/"
@using System.Timers
@implements IDisposable

<PageTitle>Momentum - Progress, Amplified.</PageTitle>

@* Add a wrapper div for more specific CSS targeting *@
<div class="home-quote-carousel"> 

    @* Quote Carousel Box *@
    <div class="quote-carousel-box bg-light p-4 shadow rounded position-relative mb-4">

        @* Top-Left Decorative SVG Quote *@
        <div class="quote-decoration quote-decoration-1">
            <svg width="60" height="60" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M14.017 18L14.017 10.609C14.017 4.905 17.748 1.039 23 0L23.995 2.151C21.563 3.068 20 5.789 20 8H24V18H14.017ZM0 18V10.609C0 4.905 3.748 1.038 9 0L9.996 2.151C7.563 3.068 6 5.789 6 8H9.983L9.983 18L0 18Z" fill="rgba(79, 70, 229, 0.2)"></path>
            </svg>
        </div>

        @* Quote Content Area *@
        <div class="quote-content">
            @if (Quotes.Any())
            {
                @for (int i = 0; i < Quotes.Count; i++)
                {
                    var quote = Quotes[i];
                    var isActive = i == currentQuoteIndex;
                    <div class="quote-item @(isActive ? "active" : "")">
                        <p class="quote-text text-secondary fst-italic fs-5">"@quote.Text"</p>
                        <p class="quote-author text-muted text-end mt-2">— @quote.Author</p>
                    </div>
                }
            }
            else
            {
                <p>Loading quotes...</p>
            }
        </div>

        @* Bottom-Right Decorative SVG Quote *@
         <div class="quote-decoration quote-decoration-2">
             <svg width="60" height="60" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                 @* Using the same path, relying on CSS for position/rotation *@
                 <path d="M14.017 18L14.017 10.609C14.017 4.905 17.748 1.039 23 0L23.995 2.151C21.563 3.068 20 5.789 20 8H24V18H14.017ZM0 18V10.609C0 4.905 3.748 1.038 9 0L9.996 2.151C7.563 3.068 6 5.789 6 8H9.983L9.983 18L0 18Z" fill="rgba(79, 70, 229, 0.2)"></path> 
             </svg>
         </div>

        @* Indicator Dots *@
        <div class="quote-indicators">
            @for (int i = 0; i < Quotes.Count; i++)
            {
                var dotClass = i == currentQuoteIndex ? "quote-dot active" : "quote-dot";
                <div class="@dotClass"></div>
            }
        </div>
    </div>

</div> @* End of home-quote-carousel wrapper *@

@* You can add other Home page content below the carousel here *@


